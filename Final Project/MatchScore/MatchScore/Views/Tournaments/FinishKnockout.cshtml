@model TournamentDto
@inject ITournamentsService tournamentService
@inject IPlayersService playersService
@{
	ViewData["Title"] = "Winner";
	var winner = this.playersService.GetByFullName(this.Model.Winner);
}

<section class="hero-section set-bg" data-setbg="/img/hero-1.jpg" style="background-image: url(&quot;/img/hero-2.jpg&quot;);">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="hs-item">
					<div class="container">
						<div class="row">
							<div class="col-lg-12">
								<div class="hs-text">
									<h1  class="text-warning mb-3">@this.Model.Title</h1>
									<h2 class="text-warning">Winner:</h2>
									<a asp-controller="Players" asp-action="Details" asp-route-id="@winner.Id" class="btn-change"><h2 class="text-warning">@winner.FullName</h2></a>

								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<style>
		h4, h2 {
			font-family: serif
		}




		.winner-img {
			max-width: 50%
		}
</style>
