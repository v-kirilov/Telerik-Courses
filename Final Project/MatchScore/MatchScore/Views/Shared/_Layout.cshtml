							<div class="logo">
								<a><img src="/img/paytowinlogo.png" alt="logo"></a>
							</div>
						</div>
						<div class="col-lg-10">
							<div class="nav-menu">
								<ul class="main-menu">
									<li><a asp-controller="Home" asp-action="Index">Home</a></li>
									<li>
										<a href="#">Tournaments</a>
										<ul class="dropdown">
											<li><a asp-controller="Tournaments" asp-action="Index">Information</a></li>
											<li><a asp-controller="Tournaments" asp-action="Create">Create</a></li>
											<li><a asp-controller="Tournaments" asp-action="Past">Past</a></li>
											<li><a asp-controller="Tournaments" asp-action="Current">Current</a></li>
											<li><a asp-controller="Tournaments" asp-action="Future">Future</a></li>

										</ul>
									</li>
									<li>
										<a href="#">Players</a>
										<ul class="dropdown">
											@if (this.authManager.CurrentUser != null && (authManager.CurrentUser.Role.Name == "Admin" || this.authManager.CurrentUser.Role.Name == "Director"))
											{
												<li><a asp-controller="Players" asp-action="Create">Create</a></li>
											}
											<li><a asp-controller="Players" asp-action="Index">All players</a></li>
											<li><a asp-controller="Players" asp-action="PlayersRanking">Players ranking</a></li>
										</ul>
									</li>
									<li>
										<a href="#">Matches</a>
										<ul class="dropdown">
											<li><a asp-controller="Matches" asp-action="Index">Information</a></li>
											<li><a asp-controller="Matches" asp-action="Create">Create</a></li>
											<li><a asp-controller="Matches" asp-action="Past">Past</a></li>
											<li><a asp-controller="Matches" asp-action="Current">Current</a></li>
											<li><a asp-controller="Matches" asp-action="Future">Future</a></li>
										</ul>
									</li>
									@if (this.authManager.CurrentUser != null)
									{
										<li>
											<a href="#">Users</a>
											<ul class="dropdown">
												<li><a asp-controller="Users" asp-action="Index">All users</a></li>
											</ul>
										</li>
									}
									@if (this.authManager.CurrentUser != null && this.authManager.CurrentUser.Role.Name == "Admin")
									{
										<li>
											<a href="#">Requests</a>
											<ul class="dropdown">
												<li><a asp-controller="Requests" asp-action="Index">All requests</a></li>
											</ul>
										</li>
									}
									<li><a asp-controller="Home" asp-action="About">About</a></li>
									<li>
										<a href="/api/swagger">API</a>
									</li>
								</ul>
								@*<div class="nm-right search-switch">
								<i class="fa fa-search"></i>
								</div>*@

							</div>
						</div>
					</div>
					<div class="canvas-open">
						<i class="fa fa-bars"></i>

					</div>
				</div>
			</div>
		</div>
	</header>



	@*	<div class="container">
	<main role="main" class="pb-3">*@
	@RenderBody()
