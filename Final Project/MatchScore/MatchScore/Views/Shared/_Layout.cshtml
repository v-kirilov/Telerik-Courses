<!DOCTYPE html>
<html lang="en">

@inject IAuthManager authManager

<head>
	<meta charset="UTF-8">
	<meta name="description" content="Specer Template">
	<meta name="keywords" content="Specer, unica, creative, html">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<title>Play to Win</title>

	<!-- Google Font -->
	<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900&amp;display=swap" rel="stylesheet">

	<!-- Css Styles -->
	<link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css">
	<link rel="stylesheet" href="/lib/font-awesome/css/all.css" type="text/css">
	<link rel="stylesheet" href="/css/owl.carousel.min.css" type="text/css">
	<link rel="stylesheet" href="/css/magnific-popup.css" type="text/css">
	<link rel="stylesheet" href="/css/slicknav.min.css" type="text/css">
	<link rel="stylesheet" href="/css/style.css" type="text/css">
</head>
<body>

	<!-- Offcanvas Menu Section Begin -->
	<div class="offcanvas-menu-overlay"></div>
	<div class="offcanvas-menu-wrapper">
		<div class="canvas-close">
			<i class="fa fa-close"></i>
		</div>
		<div class="search-btn search-switch">
			<i class="fa fa-search"></i>
		</div>
		<div class="header__top--canvas">
			<div class="ht-info">
				<ul>
					<li class="time">@DateTime.Now</li>
					@if (this.authManager.CurrentUser == null)
					{
						<li><a asp-controller="Users" asp-action="Register" type="button" class="btn btn-warning rounded-pill float-right m-1"><i class="fa fa-user-plus" aria-hidden="true"></i>&nbsp&nbspSign-up</a></li>
						<li><a asp-controller="Users" asp-action="Login" type="button" class="btn btn-dark rounded-pill float-right m-1"><i class="fa fa-sign-in" aria-hidden="true"></i>&nbsp&nbspSign-in</a></li>
					}
					else
					{
						<li><a asp-controller="Users" asp-action="Logout" type="button" class="btn btn-dark rounded-pill float-right m-1"><i class="fa fa-sign-out" aria-hidden="true"></i>&nbsp&nbspSign-out</a></li>
						<li><a asp-controller="Users" asp-action="Details" asp-route-id=@this.authManager.CurrentUser.Id type="button" class="btn btn-warning rounded-pill float-right m-1"><i class="fa fa-user" aria-hidden="true"></i>&nbsp&nbspMy profile</a></li>
					}
				</ul>
			</div>

		</div>
		<ul class="main-menu mobile-menu">
			<li><a asp-controller="Home" asp-action="Index">Home</a></li>
			<li>
				<a href="#">Tournaments</a>
				<ul class="dropdown">
					<li><a asp-controller="Tournaments" asp-action="Index">Information</a></li>
					<li><a asp-controller="Tournaments" asp-action="Create">Create</a></li>
					<li><a asp-controller="Tournaments" asp-action="Past">Past</a></li>
					<li><a asp-controller="Tournaments" asp-action="Current">Current</a></li>
					<li><a asp-controller="Tournaments" asp-action="Future">Future</a></li>

				</ul>
			</li>
			<li>
				<a href="#">Players</a>
				<ul class="dropdown">
					@if (this.authManager.CurrentUser != null && (authManager.CurrentUser.Role.Name == "Admin" || this.authManager.CurrentUser.Role.Name == "Director"))
					{
						<li><a asp-controller="Players" asp-action="Create">Create</a></li>
					}
					<li><a asp-controller="Players" asp-action="Index">All players</a></li>
				</ul>
			</li>
			<li>
				<a href="#">Matches</a>
				<ul class="dropdown">
					<li><a asp-controller="Matches" asp-action="Index">Information</a></li>
					<li><a asp-controller="Matches" asp-action="Create">Create</a></li>
					<li><a asp-controller="Matches" asp-action="Past">Past</a></li>
					<li><a asp-controller="Matches" asp-action="Current">Current</a></li>
					<li><a asp-controller="Matches" asp-action="Future">Future</a></li>
				</ul>
			</li>
			@if (this.authManager.CurrentUser != null)
			{
				<li>
					<a href="#">Users</a>
					<ul class="dropdown">
						<li><a asp-controller="Users" asp-action="Index">All users</a></li>
					</ul>
				</li>
			}
			@if (this.authManager.CurrentUser != null && this.authManager.CurrentUser.Role.Name == "Admin")
			{
				<li>
					<a href="#">Requests</a>
					<ul class="dropdown">
						<li><a asp-controller="Requests" asp-action="Index">All requests</a></li>
					</ul>
				</li>
			}
			<li><a asp-controller="Home" asp-action="About">About</a></li>
			<li>
				<a href="/api/swagger">API</a>
			</li>
		</ul>

		<div id="mobile-menu-wrap"></div>
	</div>
	<!-- Offcanvas Menu Section End -->
	<header class="header-section">
