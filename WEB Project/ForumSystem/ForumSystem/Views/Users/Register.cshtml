@{
    ViewData["Title"] = "Register";
}

@model RegisterViewModel

<div class="container mt-2 mb-4">
    <div class="col-sm-8 ml-auto mr-auto">
        <ul class="nav nav-pills nav-fill mb-1" id="pills-tab" role="tablist">
            <li class="nav-item"> <a class="nav-link text-dark" asp-controller="Users" asp-action="Login">Login</a> </li>
            <li class="nav-item"> <a class="nav-link active bg-dark" id="pills-signup-tab" data-toggle="pill" href="#pills-signup-tab" role="tab" aria-controls="pills-signup" aria-selected="true">Register</a> </li>
        </ul>
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-signup" role="tabpanel" aria-labelledby="pills-signup-tab">
                <div class="col-sm-12 border border-dark shadow rounded pt-2">
                    <h1 class="mt-4 mb-4" align="center">Register</h1>
                    @*<div class="text-center"><img src="https://placehold.it/80x80" class="rounded-circle border p-1"></div>*@
                    <form asp-controller="Users" asp-action="Register" method="post" id="singnupFrom">
                        <div class="form-group">
                            <label class="font-weight-bold" asp-for="FirstName">First Name<span class="text-danger">*</span></label>
                            <input type="text" asp-for="FirstName" class="form-control" required placeholder="Enter your first name" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="font-weight-bold" asp-for="LastName">Last Name<span class="text-danger">*</span></label>
                            <input type="text" asp-for="LastName" class="form-control" required placeholder="Enter your last name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="font-weight-bold" asp-for="Username">Username<span class="text-danger">*</span></label>
                            <input type="text" asp-for="Username" class="form-control" required placeholder="Choose your username" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="font-weight-bold" asp-for="Email">Email<span class="text-danger">*</span></label>
                            <input type="text" asp-for="Email" class="form-control" required placeholder="Enter valid email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="font-weight-bold" asp-for="Password">Password<span class="text-danger">*</span></label>
                            <input type="password" asp-for="Password" class="form-control" placeholder="***********" required>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="font-weight-bold" asp-for="ConfirmPassword">Confirm Password<span class="text-danger">*</span></label>
                            <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="***********" required>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" name="signupsubmit" value="Register" class="btn btn-block btn-dark">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>